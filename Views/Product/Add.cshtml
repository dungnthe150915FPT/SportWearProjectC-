@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@using SportWearManage.Models
@model Product
@{
    List<Category> categories = ViewBag.Categories;
}

<form asp-controller="Product" asp-action="Add" method="post">
    Product Name:<input type="text" asp-for=ProductName />
    <br />Quantity: <input required type="text" asp-for=Quantity />
    <br />Price:<input required type="text" asp-for=Price />
    <br />Added Date:<input required type="date" asp-for=AddedDate />
    <br />Description:<input required type="text" asp-for=Description />
    <br />Image:<input required type="text" asp-for=Image />
    <br />Source Of Supply:<input required type="text" asp-for=SourceOfSupply />
    <br />Category:
    <select asp-for=CategoryId>
        @foreach (Category c in @ViewBag.Categories)
        {
            <option value=@c.CategoryId>@c.CategoryName</option>
        }
    </select>
    <select asp-for=AccountId>
        @foreach (Account a in @ViewBag.Accounts)
        {
            <option value=@a.AccountId>@a.Username</option>
        }
    </select>
    <input type="submit" value="ADD" />
    <button><a style="text-decoration: none" href="../Product/List">Return to List of products</a></button>
</form>
